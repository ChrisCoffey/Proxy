<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/adapter_channel_grid_header_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_channel_grid_header_image"
        android:layout_width="@dimen/common_circleimageview_settings_radius"
        android:layout_height="@dimen/common_circleimageview_settings_radius"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/channel_header_image"
        android:layout_marginTop="@dimen/common_margin_xhuge"/>

    <TextView
        android:id="@+id/adapter_channel_grid_header_name"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_margin_huge"/>

</LinearLayout>